<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <include layout="@layout/toolbar" />
    <TextView
        android:id="@+id/listview_retrive_item_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="code"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/listview_retrive_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_weight="2" />
    <TextView
        android:id="@+id/listview_retrive_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amount"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/listview_retrive_item_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unit"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:background="@color/red_100"/>
    <TextView
        android:id="@+id/listview_retrive_item_bin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bin"
        android:layout_weight="0.4"
        android:layout_gravity="center_horizontal"
        android:background="@color/yellow_100"/>

</LinearLayout>